<UserControl x:Class="ThrottleUI.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
			<TextBlock Text="Raw:"           Margin="0,0,16,0"/>
			<TextBlock Text="0"              Margin="0,0,16,0"/>
			<TextBlock Text="Filtered:"      Margin="0,0,16,0"/>
			<TextBlock Text="0.0"            Margin="0,0,16,0"/>
			<TextBlock Text="Norm:"          Margin="0,0,16,0"/>
			<TextBlock Text="0.0"            Margin="0,0,16,0"/>
			<TextBlock Text="Out:"           Margin="0,0,16,0"/>
			<TextBlock Text="0.0"/>
        </StackPanel>
        <Border Grid.Row="1" BorderBrush="#ccc" BorderThickness="1" Margin="0,12,0,0">
            <TextBlock Text="(Graphs placeholder)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
