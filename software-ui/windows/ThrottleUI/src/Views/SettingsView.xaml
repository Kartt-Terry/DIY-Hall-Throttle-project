<UserControl x:Class="ThrottleUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- YLÃ„RIVI: profiili + deadzonet + expo -->
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Profile:" VerticalAlignment="Center" Margin="0,0,12,0"/>
			<ComboBox x:Name="CmbProfile" Width="160" Margin="0,0,12,0">
				<ComboBoxItem Content="Linear"/>
				<ComboBoxItem Content="Exponential"/>
				<ComboBoxItem Content="Logarithmic"/>
			</ComboBox>

			<TextBlock Text="Expo:" VerticalAlignment="Center" Margin="0,0,12,0"/>
			<Slider x:Name="SldExpo" Minimum="1.0" Maximum="3.0" Width="120" Margin="0,0,12,0"/>

			<TextBlock Text="Dead Low:" VerticalAlignment="Center" Margin="0,0,12,0"/>
			<Slider x:Name="SldDzL" Minimum="0" Maximum="0.1" Width="120" Margin="0,0,12,0"/>

			<TextBlock Text="Dead High:" VerticalAlignment="Center" Margin="0,0,12,0"/>
			<Slider x:Name="SldDzH" Minimum="0" Maximum="0.1" Width="120"/>
		</StackPanel>

		<!-- ALARIVI: kalibrointipainikkeet -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,16,0,0">
			<Button Content="Capture Min" Width="120" Margin="0,0,12,0"/>
			<Button Content="Capture Max" Width="120" Margin="0,0,12,0"/>
			<Button Content="Save to Device" Width="160"/>
		</StackPanel>
	</Grid>
</UserControl>