<Window x:Class="ThrottleUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DIY Hall Throttle" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#1e1e1e" Grid.Column="0">
            <TextBlock Text="DIY Hall Throttle" Foreground="White" FontSize="18" Margin="16"/>
            <Button x:Name="BtnDriving" Content="Driving" Margin="8" Click="BtnDriving_Click"/>
            <Button x:Name="BtnSettings" Content="Settings" Margin="8" Click="BtnSettings_Click"/>
            <Button x:Name="BtnFault" Content="Fault" Margin="8" Click="BtnFault_Click"/>
            <Button x:Name="BtnDiagnostics" Content="Diagnostics" Margin="8" Click="BtnDiagnostics_Click"/>
        </StackPanel>

        <!-- Content -->
        <ContentControl x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>
